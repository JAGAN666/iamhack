# Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database (Use Supabase for free PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/academic_nft

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# Email Service (Choose one)
# Option 1: SendGrid (Free tier: 100 emails/day)
SENDGRID_API_KEY=your_sendgrid_api_key

# Option 2: SMTP (Gmail, Outlook, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

FROM_EMAIL=noreply@academicnft.com

# File Storage (Cloudinary - Free tier: 25GB)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Redis Cache (Optional - Railway provides free Redis)
REDIS_URL=redis://localhost:6379

# Blockchain Configuration
POLYGON_RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/your_key
ETHEREUM_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your_key
PRIVATE_KEY=your_wallet_private_key_for_contract_deployment

# MetaMask SDK Configuration
METAMASK_API_KEY=https://gas.api.infura.io/v3/3d1053688706429fa7a6a54ddff7611d
INFURA_PROJECT_ID=your_infura_project_id
ALCHEMY_API_KEY=your_alchemy_api_key

# Contract Addresses (Deploy contracts and update these)
ACADEMIC_NFT_CONTRACT_ADDRESS=0x...
ACCESS_GATEKEEPER_CONTRACT_ADDRESS=0x...

# Supported Networks
SUPPORTED_NETWORKS=1,5,137,80001  # Mainnet, Goerli, Polygon, Mumbai

# External APIs (Optional)
OPENAI_API_KEY=your_openai_api_key

# Monitoring (Sentry - Free tier: 5K errors/month)
SENTRY_DSN=your_sentry_dsn

# Payment Processing (Stripe - Optional)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret